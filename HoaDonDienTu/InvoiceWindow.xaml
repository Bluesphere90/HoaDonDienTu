<Window x:Class="HoaDonDienTu.InvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoaDonDienTu"
        mc:Ignorable="d"
        Title="Quản Lý Hóa Đơn Điện Tử" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3">
            <Grid>
                <TextBlock Text="QUẢN LÝ HÓA ĐƠN ĐIỆN TỬ" 
                           FontSize="24" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button x:Name="btnLogout" Content="Đăng Xuất" Width="100" Height="30"
                        HorizontalAlignment="Right" Margin="0,0,20,0"
                        Background="#E53935" Foreground="White"
                        Click="btnLogout_Click"/>
            </Grid>
        </Border>

        <!-- Filter/Search Panel -->
        <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" Margin="10,10,10,5">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 1: Type Selection and Date Range -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Invoice Type Selection -->
                    <GroupBox Grid.Column="0" Header="Loại hóa đơn" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="optMua" Content="Hóa đơn mua vào" 
                                         Margin="5,0,10,0" IsChecked="True" Checked="optMua_Changed"/>
                            <RadioButton x:Name="optBan" Content="Hóa đơn bán ra" 
                                         Margin="5,0,0,0" Checked="optBan_Changed"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Date Range -->
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Từ ngày:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker x:Name="dpTuNgay" Grid.Column="1" SelectedDateChanged="dpTuNgay_SelectedDateChanged"/>

                        <TextBlock Grid.Column="2" Text="Đến ngày:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                        <DatePicker x:Name="dpDenNgay" Grid.Column="3" SelectedDateChanged="dpDenNgay_SelectedDateChanged"/>
                    </Grid>
                </Grid>

                <!-- Row 2: Status Filters and Options -->
                <Grid Grid.Row="1" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Trạng thái hóa đơn:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="cboTTHD" Grid.Column="1" Height="25" SelectionChanged="cboTTHD_SelectionChanged"/>

                    <TextBlock Grid.Column="3" Text="Kết quả kiểm tra:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="cboKQKT" Grid.Column="4" Height="25" SelectionChanged="cboKQKT_SelectionChanged"/>
                </Grid>

                <!-- Row 3: Options and Buttons -->
                <Grid Grid.Row="2" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Options -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <CheckBox x:Name="chkTH" Content="Tổng hợp" Margin="0,0,15,0" IsChecked="True"/>
                        <CheckBox x:Name="chkCT" Content="Chi tiết" Margin="0,0,15,0" IsChecked="True"/>
                        <CheckBox x:Name="chkXmlZip" Content="Tải XML/HTML" Margin="0,0,5,0" Checked="chkXmlZip_Checked"/>
                    </StackPanel>

                    <!-- XML Folder Selection -->
                    <Grid Grid.Column="1" Margin="10,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtXMLFolderPath" Grid.Column="0" Height="25" IsEnabled="False"/>
                        <Button x:Name="btnChonFolder" Grid.Column="1" Content="..." Width="30" Height="25" 
                                Margin="5,0,0,0" IsEnabled="False" Click="btnChonFolder_Click"/>
                    </Grid>

                    <!-- Search Button -->
                    <Button x:Name="btnTaiHoaDon" Grid.Column="2" Content="TẢI HÓA ĐƠN" Width="120" Height="35"
                            Background="#4CAF50" Foreground="White" FontWeight="Bold"
                            Click="btnTaiHoaDon_Click"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Data Display Area -->
        <TabControl Grid.Row="2" Margin="10,5,10,10">
            <TabItem Header="Tổng Hợp">
                <DataGrid x:Name="dgTongHop" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="STT" Binding="{Binding STT}" Width="50"/>
                        <DataGridTextColumn Header="Ngày HĐ" Binding="{Binding NgayHD}" Width="100"/>
                        <DataGridTextColumn Header="MST" Binding="{Binding MST}" Width="120"/>
                        <DataGridTextColumn Header="Tên đơn vị" Binding="{Binding TenDV}" Width="*"/>
                        <DataGridTextColumn Header="Ký hiệu" Binding="{Binding KyHieu}" Width="100"/>
                        <DataGridTextColumn Header="Số HĐ" Binding="{Binding SoHD}" Width="80"/>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" Width="120"/>
                        <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TongTien}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Chi Tiết">
                <DataGrid x:Name="dgChiTiet" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="STT" Binding="{Binding STT}" Width="50"/>
                        <DataGridTextColumn Header="Ngày HĐ" Binding="{Binding NgayHD}" Width="100"/>
                        <DataGridTextColumn Header="MST" Binding="{Binding MST}" Width="120"/>
                        <DataGridTextColumn Header="Ký hiệu" Binding="{Binding KyHieu}" Width="100"/>
                        <DataGridTextColumn Header="Số HĐ" Binding="{Binding SoHD}" Width="80"/>
                        <DataGridTextColumn Header="Mã HH" Binding="{Binding MaHH}" Width="100"/>
                        <DataGridTextColumn Header="Tên hàng hóa" Binding="{Binding TenHH}" Width="*"/>
                        <DataGridTextColumn Header="Đơn vị" Binding="{Binding DonVi}" Width="70"/>
                        <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuong}" Width="80"/>
                        <DataGridTextColumn Header="Đơn giá" Binding="{Binding DonGia}" Width="100"/>
                        <DataGridTextColumn Header="Thành tiền" Binding="{Binding ThanhTien}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="XML/HTML">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="btnChiTietXML" Content="Trích xuất XML" Width="120" Height="30"
                            Grid.Row="0" HorizontalAlignment="Left" Margin="10,5,0,5"
                            Click="btnChiTietXML_Click"/>

                    <ListView x:Name="lvXMLFiles" Grid.Row="1" Margin="5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Tên file" Width="250" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Kích thước" Width="100" DisplayMemberBinding="{Binding Size}"/>
                                <GridViewColumn Header="Ngày tạo" Width="150" DisplayMemberBinding="{Binding DateCreated}"/>
                                <GridViewColumn Header="Đường dẫn" Width="400" DisplayMemberBinding="{Binding Path}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#EEEEEE">
            <StatusBarItem>
                <TextBlock x:Name="lblStatus" Text="Sẵn sàng"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="lblSaiNgay" Text="Sai định dạng ngày!" Foreground="Red" Visibility="Collapsed"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>